{
  "$schema": "https://developer.chrome.com/manifest-v3/manifest.json",
  "manifest_version": 3,
  "name": "AuthKit Extension",
  "description": "A chrome extensin for authkit",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["activeTab", "cookies", "tabs"],
  "host_permissions": ["http://localhost/*", "http://localhost:3000/*", "https://api.workos.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["contentStyle.css", "icon-128.png", "icon-32.png"],
      "matches": []
    }
  ]
}
